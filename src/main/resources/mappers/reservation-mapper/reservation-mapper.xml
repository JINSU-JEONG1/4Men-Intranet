	<!--업데이트 초안  -->
	
	<update id="reserveUpdate">
	UPDATE RESERVATION_MEETING_ROOM
	SET
	RESERVE_AVAILABLE = 'N'
	WHERE
	ROOM_CODE = #{roomCode}
	AND
	RESERVE_DATE = #{reserveDate}
	AND RESERVE_TIME = #{reserveTime}
	
